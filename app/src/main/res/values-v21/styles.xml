<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="Theme.AppCompat">

        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="android:windowBackground">@color/background_app</item>

        <item name="actionBarStyle">@style/ActionBar</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/Primary_Blue_300</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/Primary_Blue_800</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/Primary_Red_100</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/Primary_Blue_800</item>
        <item name="background">@color/Primary_Blue_800</item>
    </style>

</resources>